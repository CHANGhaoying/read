.saying{
  border: 1rpx solid red;
}
.saying view span{
  position: absolute;
  width: 0;
  height: 0;
  left: -50rpx;
  bottom: 0;
  border-width: 8rpx 28rpx;
  border-color: transparent #E5E5E5 transparent transparent;
  border-style: solid; 
}
.saying view view{
  font-size: 30rpx;
  color:#222222;
  background: #E5E5E5;
  display: inline-block;
  padding: 30rpx;
  max-width:520rpx;
  border-radius: 10rpx;
  line-height: 50rpx;
  /* font-family: "myff"; */
}
.navbar{
  height: 200rpx;
  border-bottom: 1px solid #ddd;
  position: relative;
}
.audio{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 40rpx;
}
.audio .iconfont{
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  border: 1rpx solid #222222;
  text-align: center;
  line-height: 44rpx;
  font-size: 30rpx;
  color:#FE6868;
}

.audio .slider{
  width: 66%;
  height: 4rpx;
  background: #bbb;
}
.audio .slider view{
  height: 100%;
  background: #FE6868;
  position: relative;
}
.audio .slider p{
  width: 22rpx;
  height: 22rpx;
  border-radius: 50%;
  border: 1rpx solid #bbb;
  position: absolute;
  right: 0;
  top: -8rpx;
  background: #fff;
  box-sizing: border-box;
}
.audio .slider span{
  display: block;
  width: 6rpx;
  height: 6rpx;
  border-radius: 50%;
  background: #FE6868;
  margin: 8rpx auto 0;
}
.audio text{
  font-size: 22rpx;
  color: #999;
}