/* pages/study/study.wxss */
page{
  position: relative;
  display: flex;
  flex-direction:column;
}
.first-cover .bg-img{
  text-align: center;
  padding-top: 40rpx;
}
.bg-img image{
  width: 580rpx;
  height: 647rpx;
}
.first-cover .talk{
  padding: 48rpx 80rpx 80rpx;
}
.talk view{
  font-size: 50rpx;
  color: #191919;
  padding-bottom: 20rpx;
}
.talk text{
  font-size: 30rpx;
	line-height: 52rpx;
	color: #474747;
}
.first-cover button{
  width: 490rpx;
	height: 88rpx;
	background: linear-gradient(90deg,#ff6a66 0%,#ff9b50 100%);
	font-size: 36rpx;
	color: #ffffff;
	border-radius: 44rpx;
}
/* 单词 词组 长难句 个数目录条（定位隐藏） */
.catalog-wrap{
  position: fixed;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
}
.catalog{
  width: 669rpx;
  height: 0;
	background: #f9fafc;
  margin:0 auto;
  display: flex;
  justify-content:space-between;
  align-items: center;
  padding: 0 30rpx;
  box-sizing: border-box;
  
}
.catalog>view{
  color: #191919;
  text-align: center;
  line-height: 36rpx;
  position: relative;
}
.catalog>view image{
  position: absolute;
  width: 66rpx;
  height: 66rpx;
  bottom:30rpx;
  right: -50rpx;
}
.catalog span{
  font-size: 48rpx;
}
.catalog text{
  font-size: 24rpx;
}
/* 单词词组列表 */
.list{
  padding: 0 30rpx;
}
.list-item{
  border-bottom: 2rpx solid #e6e6e7;
  padding: 35rpx 0 40rpx 20rpx;
}
.list-item>view:first-child{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.list-item span{
  color: #191919;
  font-size: 50rpx;
}
.list-item span text{
  margin-left: 30rpx;
  font-size: 26rpx;
	color: #797979;
}
.list-item icon{
  color:#f3c638;
  width: 80rpx;
  text-align: center;
  font-size: 34rpx;
}
.list-item .chinese{
  margin-top: 15rpx;
  font-size: 26rpx;
  color: #626262;
}
.play-btn-box button{
  width: 600rpx;
	height: 88rpx;
  line-height: 88rpx;
	background: linear-gradient(90deg,#ff6a66 0%,#ff9b50 100%);
	border-radius: 44rpx;
  font-size: 48rpx;
  color: #fff;
}
.play-btn-box{
  padding: 84rpx 0;
}
.title{
  font-size: 48rpx;
	color: #191919;
  padding: 10rpx 50rpx 0;
}
/* 连连看 */
.play-box{
  padding-top: 50rpx;
}
.play-box>view{
  padding:0 50rpx;
}
.clock{
  margin: 40rpx 0 75rpx;
}
.clock image{
  width: 50rpx;
  height: 50rpx;
  vertical-align: top; 
}
.clock text{
  color: #474747;
  font-size: 38rpx;
  margin-left: 30rpx;
}
.clock span{
  float:right;
  background: #303030;
  width: 46rpx;
	height: 43rpx;
  line-height: 43rpx;
  color: #ffffff;
  font-size: 40rpx;
  text-align: center;
}
.btn-group{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.btn-group view{
  width: 190rpx;
	height: 63rpx;
	background-color: #eeebf6;
  color: #191919;
  font-size: 26rpx;
  text-align: center;
  line-height: 63rpx;
  margin-bottom: 32rpx;
}
.btn-group .active{
  background-color: #FE6868;
  color: #fff;
}
/* 长难句 */
.cnj{
	font-size: 30rpx;
	line-height: 40rpx;
	color: #474747;
  margin-top: 30rpx;
  padding: 0 50rpx;
  word-wrap: break-word; 
}
.cnj-box .topic{
  padding:60rpx 50rpx 49rpx;
  display: flex;
  align-items: center;
}
.topic image{
  width: 37rpx;
	height: 37rpx;
	/* background-color: #ff7860; */
}
.topic text{
  font-size: 33rpx;
	color: #626262;
  margin-left: 26rpx;
}
.opt{
  width: 661rpx;
	height: 75rpx;
	background-color: #f5f2fb;
	border-radius: 38rpx 38rpx 0rpx 38rpx;
	border: solid 1rpx #ad90e6;
  font-size: 30rpx;
	line-height: 75rpx;
	color: #474747;
  margin-bottom: 20rpx;
  white-space: nowrap;/*不允许换行*/
  overflow: hidden;/*超出隐藏*/
  text-overflow: ellipsis;/*文本超出三点代替*/
  position: relative;
}
.opt span{
  position: absolute;
  background: #28b65f;
  right: -16rpx;
  bottom: -16rpx;
  color: #fff;
  height:40rpx;
  width: 40rpx;
  border-radius: 50%;
  font-size: 26rpx;
  text-align: left;
  line-height: 32rpx;
  font-weight: bold;
  padding:5rpx;
  display: none;
}
.yes{
  background-color: #d7ffe6;
	border: solid 1rpx #28b65f;
}
.yes span{
  display: block;
}
.no{
  background-color: #fde2df;
	border: solid 1rpx #f86f60;
}
.no span{
  background: #f86f60;
  font-size:24rpx;
  padding-left: 7rpx;
  right: -19rpx;
  display: block;
}
.look{
  font-size: 32rpx;
	color: #ff7860;
  text-align: center;
  margin-top:40rpx;
}
.look image{
  width: 22rpx;
  height: 18rpx;
  padding-left: 20rpx;
}

/* 解析 */
.analysis{
  padding: 36rpx 50rpx;
}
.analysis .content{
  color: #626262;
  margin: 20rpx 0 0;
  line-height: 50rpx;
}

.analysis .sentence .content text{
  display: inline-block;
  height: 64rpx;
  line-height: 64rpx;
  margin-right: 10rpx;
}

.analysis h3{
  margin-left: -20rpx;
  color: #191919;
  font-size: 34rpx;
  display: inline-block;
}

.analysis .sentence-part{
  margin-top: 30rpx;
}
.analysis .sentence-part .content text{
  margin-right: 5rpx;
}
/* 成分分析 */
.analysis .element{
  background: #f0f0f0;
  margin: 30rpx 0 40rpx;
  padding: 20rpx;
  box-sizing: border-box;
}
.analysis .element h4{
  font-size: 30rpx;
  display: block;
  margin-bottom: 5rpx;
}
.analysis .ele1{
  color: #fc8383;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}
.analysis .ele1 text{
  margin-right: 10rpx;
}
.analysis .ele2{
  color: #8e8e8e;
  font-size: 26rpx;
}
.analysis .ele2 view{
  display: flex;
  flex-wrap: wrap;
}
.analysis .ele2 text{
  width: 50%;
  margin-top: 5rpx;
}
.analysis .txt .content{
  font-size: 30rpx;
}
/* 各成分样式 */
.analysis .subject,.object{
  border-bottom: 1rpx solid;
}
.analysis .predicate{
  border-bottom: 8rpx double;
}
.analysis .appositive{
  border-bottom: 1rpx dashed;
}
.analysis .ranking-btn {
	width: 600rpx;
	height: 88rpx;
	background-image: linear-gradient(90deg,#ff6a66 0%,#ff9b50 100%);
	border-radius: 44rpx;
  font-size: 36rpx;
	color: #ffffff;
  margin-top: 36rpx;
}
/* 遮罩 */
.cover{
  width:100%;
  height: 100%;
  position: absolute;
  top:0;
  left:0;
  background: rgba(0,0,0,0.5);
  z-index: 10;
}
.cover>view{
  width: 584rpx;
	height: 289rpx;
	background-color: #ffffff;
	border-radius: 16rpx;
  margin: 450rpx auto 0;
  font-size: 28rpx;
	line-height: 52rpx;
	color: #242424;
  text-align: center;
  padding-top:65rpx; 
}
.cover button{
  background: #fff;
  color:#17bb56;
  font-size: 26rpx;
  border-top: 1rpx solid #e2e1e1;
  margin-top: 40rpx;
}
