/* pages/ranking/ranking.wxss */
.ranking{
  padding: 45rpx 46rpx 0;
}
.title{
	font-size: 48rpx;
	color: #191919;
}
.list{
  padding: 20rpx 0;
}
.list-item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #e9e9e9;
  padding: 35rpx 20rpx;
  font-size: 30rpx;
  color: #191919;
}
.list-item .left{
  display: flex;
  align-items: center;
}
.avatar{
  width: 76rpx;
	height: 76rpx;
  border-radius:50%;
  overflow: hidden;
  margin: 0 30rpx;
}
.left text{
  width: 270rpx;
  white-space: nowrap;/*不允许换行*/
  overflow: hidden;
  text-overflow:ellipsis;
}
.self{
	height: 119rpx;
	background-color: #44be73;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 70rpx;
}
.self-info{
  display: flex;
}
.self .avatar{
  margin: 0 20rpx 0 0;
}
.self .name{
  font-size: 30rpx;
	color: #191919;
  padding-top:2rpx; 
}
.name+view{
  line-height: 24rpx;
}
.self-info text{
  font-size: 20rpx;
  color: #1c3827;
  margin-right: 20rpx;
}
.self>span{
  width: 110rpx;
	height: 49rpx;
  text-align: center;
	background: linear-gradient(90deg,#ff6a66 0%,#ff9b50 100%);
	box-shadow: 2rpx 6rpx 10rpx 0rpx#21984f;
	border-radius: 25rpx;
  color: #f8ddda;
  font-size: 25rpx;
  line-height: 49rpx;
}